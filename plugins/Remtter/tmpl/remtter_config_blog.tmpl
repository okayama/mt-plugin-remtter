<style type="text/css">
    .mediumHeader {
        border-bottom: 1px solid #cddee7;
        padding-bottom: 3px;
        margin-bottom: 25px;
    }
    .subHeader {
        border-bottom: 1px dotted #cddee7;
        padding-bottom: 3px;
        margin-bottom: 25px;
    }
</style>
<h3 class="mediumHeader"><__trans phrase="Settings for OAuth"></h3>
<h4 class="subHeader"><__trans phrase="Register an Application"></h4>
<mtapp:setting
    id="register"
    label="<__trans phrase="Register">">
    <a href="http://twitter.com/apps/new" target="_blank"><__trans phrase="Click to register remtter"></a>
    <p class="hint">
        <__trans phrase="Please input following url at 'Callback URL'">: <br />
        <[*mt_dir_uri*]><$mt:adminscript$>?__mode=remtter_oauth_callback&amp;blog_id=<[*this_blog_id*]><br />
        <__trans phrase="Please check 'Read & Write' at 'Default Access type'"><br />
        <__trans phrase="Please copy and paste from registered screen.">
    </p>
</mtapp:setting>
<mtapp:setting
    id="consumer_key"
    label="<__trans phrase="Your Consumer key">"
    required="1">
    <input type="text" class="text" name="consumer_key" value="<mt:var name="consumer_key">" />
    <p class="hint"><__trans phrase="Copy and paste from twitter registration."></p>
</mtapp:setting>
<mtapp:setting
    id="consumer_secret"
    label="<__trans phrase="Your Consumer secret">"
    required="1">
    <input type="text" class="text" name="consumer_secret" value="<mt:var name="consumer_secret">" />
    <p class="hint"><__trans phrase="Copy and paste from twitter registration."></p>
</mtapp:setting>
<mtapp:setting
    id="callback_url"
    label="<__trans phrase="Callback URL">"
    required="1">
    <input type="text" class="text" name="callback_url" value="<mt:var name="callback_url">" />
    <p class="hint">
        <__trans phrase="Must be include http://"><br />
        <__trans phrase="If you don't have special reason, Plase use this">:<br /><[*mt_dir_uri*]><$mt:adminscript$>?__mode=remtter_oauth_callback&amp;blog_id=<[*this_blog_id*]>
    </p>
</mtapp:setting>
<mt:if mt:var name="consumer_key">
	<mt:if mt:var name="consumer_secret">
		<mt:if mt:var name="callback_url">
<h4 class="subHeader"><__trans phrase="Get Access token"></h4>
<mtapp:setting
    id="get_access_token"
    label="<__trans phrase="Get">">
    <a href="<mt:var name="mt_uri">?__mode=remtter_oauth_request&amp;blog_id=<[*this_blog_id*]>"><__trans phrase="Access to get token"></a>
    <p class="hint"><__trans phrase="Get token, following is filled in by auto."></p>
</mtapp:setting>
<mtapp:setting
    id="access_token"
    label="<__trans phrase="Your Twitter Access token">"
    required="1">
    <input type="text" class="text" name="access_token" value="<mt:var name="access_token">" />
</mtapp:setting>
<mtapp:setting
    id="access_secret"
    label="<__trans phrase="Your Twitter Access secret">"
    required="1">
    <input type="text" class="text" name="access_secret" value="<mt:var name="access_secret">" />
</mtapp:setting>
            <mt:if name="access_token">
                <mt:if name="access_secret">
<h3 class="mediumHeader"><__trans phrase="Settings for mail"></h3>
<mtapp:setting
    id="mail_subject"
    label="<__trans phrase="Mail subject">">
    <input type="text" class="text" name="mail_subject" value="<mt:var name="mail_subject" escape="html">" />
</mtapp:setting>
<mtapp:setting
    id="mail_body"
    label="<__trans phrase="Mail body">">
    <textarea name="mail_body" id="mail_body"><mt:var name="mail_body" escape="html"></textarea>
</mtapp:setting>
<mtapp:setting
    id="mail_to"
    label="<__trans phrase="Mail to">">
    <textarea name="mail_to" id="mail_to"><mt:var name="mail_to" escape="html"></textarea>
</mtapp:setting>
<mtapp:setting
    id="mail_from"
    label="<__trans phrase="Mail from">">
    <input type="text" class="text" name="mail_from" value="<mt:var name="mail_from" escape="html">" />
</mtapp:setting>
<h3 class="mediumHeader"><__trans phrase="Others"></h3>
<h4 class="subHeader"><__trans phrase="Status(at last task)"></h4>
<mtapp:setting
    id="follower_num"
    label="<__trans phrase="Follower number">">
    <[*follower_num*]>
</mtapp:setting>
                </mt:if>
            </mt:if>
		</mt:if>
	</mt:if>
</mt:if>
